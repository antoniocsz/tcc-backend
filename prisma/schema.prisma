datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Polygon {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  class        String
  x1           Float
  x2           Float
  y1           Float
  y2           Float
  conf         Float
  occurrence   Occurrence @relation(fields: [occurrenceId], references: [id])
  occurrenceId String     @db.ObjectId

  @@map("polygons")
}

model Occurrence {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  cameraId  String
  timestamp DateTime
  frame     String
  polygons  Polygon[]

  @@map("occurrences")
}
