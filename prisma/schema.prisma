datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Occurrence {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  cameraId  String
  timestamp DateTime
  frame     String
  polygons  Polygon[]

  @@map("occurrences")
}

type Polygon {
  class String
  x1    Float
  x2    Float
  y1    Float
  y2    Float
  conf  Float
}
