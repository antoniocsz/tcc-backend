datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Occurrence {
  id        String   @id @default(uuid())
  cameraId  String
  timestamp DateTime
  frame     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  polygons Polygon[]

  @@map("occurrences")
}

model Polygon {
  id    String @id @default(uuid())
  class String
  x1    Float
  x2    Float
  y1    Float
  y2    Float
  conf  Float

  occurrence   Occurrence @relation(fields: [occurrenceId], references: [id])
  occurrenceId String

  @@map("polygons")
}
